- name: qbittorrent container
  docker_container:
    comparisons:
      '*': ignore
      network_mode: strict
    name: qbittorrent
    network_mode: container:{{ qbittorrent_vpn_container }}

- name: qbittorrent networking checks
  shell: |
    set -x
    fail() {
      docker restart qbittorrent
      echo "result:fixed"
      exit 0
    }
    [[ "$(docker inspect qbittorrent)" == *'"Status": "running"'* ]] || docker start qbittorrent
    vpn_ip="$(docker exec qbittorrent curl -s api.ipify.org)"
    [ "$?" == "0" ] || fail
    [ "$(curl api.ipify.org)" != "$vpn_ip" ] || fail
    echo "result:ok"
  args:
    executable: /bin/bash
  register: qbittorrent_networking_fix
  changed_when: '"result:fixed" in qbittorrent_networking_fix.stdout_lines'

- name: qbittorrent app checks
  shell: |
    curl -m 300 -s localhost:8080 -o /dev/null || curl -m 300 -s localhost:8080 -o /dev/null || {
      docker restart qbittorrent
      sleep 60
      curl -m 300 -s localhost:8080 -o /dev/null || curl -m 300 -s localhost:8080 -o /dev/null
      final_check="$?"
      if [ "$final_check" == "0" ]; then
        echo "result:fixed"
      fi
      exit $final_check
    }
    echo "result:ok"
  args:
    executable: /bin/bash
  register: qbittorrent_app_fix
  changed_when: '"result:fixed" in qbittorrent_app_fix.stdout_lines'
