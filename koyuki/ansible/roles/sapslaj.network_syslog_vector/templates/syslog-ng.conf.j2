@version: 3.29
@include "scl.conf"

source s_local {
  internal();
};

source s_network_tcp {
  syslog(ip("::") ip-protocol(6) transport(tcp) port({{ network_syslog_vector_tcp_port }}));
};

source s_network_udp {
  syslog(ip("::") ip-protocol(6) transport(udp) port({{ network_syslog_vector_udp_port }}));
};

destination d_vector {
  syslog("localhost" transport("tcp") port("1514"));
};

log {
  source(s_local);
  source(s_network_tcp);
  source(s_network_udp);
  destination(d_vector);
};

{% if network_syslog_vector_debug | default(false) %}
destination d_local_debug {
  file("/config/log/debug.log");
};

log {
  source(s_local);
  source(s_network_tcp);
  source(s_network_udp);
  destination(d_local_debug);
};
{% endif %}
